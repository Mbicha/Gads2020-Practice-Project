<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/successful_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dialog_margin"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/successfulDialog"
        android:layout_height="wrap_content"
        android:padding="@dimen/dialog_padding"
        android:background="@drawable/rounded_layout"
        >

        <ImageView
            android:id="@+id/imgUnsuccessful"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_successful" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dialog_margin"
            android:gravity="center"
            android:padding="@dimen/dialog_padding"
            android:text="Submission Successful"
            android:textSize="@dimen/text_size"
            app:layout_constraintEnd_toEndOf="@+id/imgUnsuccessful"
            app:layout_constraintStart_toStartOf="@+id/imgUnsuccessful"
            app:layout_constraintTop_toBottomOf="@+id/imgUnsuccessful" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>